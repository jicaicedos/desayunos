@media only screen and (min-width: 480px) and (max-width: 767px)
	section
		display flex
		-webkit-justify-content center
		justify-content center
	.layout_footer
		-webkit-justify-content center
		display flex
		justify-content center
		padding-bottom 1em
		padding-top 1em
		& .redes_sociales_contacto
			padding-right 2em
			border-right 1px solid black
		& .contacto
			text-align center
	footer	
		& p
			text-align left		
	.desayunos
		border-bottom none
